@model FitnessGymproject.Models.Homepage

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Homepage Details</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Field</th>
                                <th>Details</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Title</td>
                                <td>@Html.DisplayFor(model => model.Title)</td>
                            </tr>
                            <tr>
                                <td>Description</td>
                                <td>@Html.DisplayFor(model => model.Description)</td>
                            </tr>
                            <tr>
                                <td>Profile Image</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(Model?.LogoUrl))
                                    {
                                        <img src="@Model.LogoUrl" alt="Profile Image" class="img-thumbnail" width="100" height="100" />
                                    }
                                    else
                                    {
                                        <span>No Image Available</span>
                                    }
                                </td>
                            </tr>
                            <tr>
                                <td>Created At</td>
                                <td>@Html.DisplayFor(model => model.CreatedAt)</td>
                            </tr>
                            <tr>
                                <td>Updated At</td>
                                <td>@Html.DisplayFor(model => model.UpdatedAt)</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.HomepageId" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
