@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/Home_Layout.cshtml";
}


<main>
    <!--? Hero Start -->
    <div class="slider-area2">
        <div class="slider-height2 d-flex align-items-center">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="hero-cap hero-cap2 text-center pt-70">
                            <h2>About Us</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Hero End -->
    <!--? About Area Start -->
    <section class="about-area section-padding30">
        <div class="container">
            <div class="row align-items-center">
                <!-- Image Section -->
                <div class="col-lg-6 col-md-12">
                    <div class="about-img">
                        @foreach (var content in Model)
                        {
                            if (content.Title == "AboutOurGym")
                            {
                                <div id="about-us">
                                    @if (!string.IsNullOrEmpty(content.ImageUrl))
                                    {
                                        <img src="@content.ImageUrl" alt="Logo" style="max-width: 100%; height: auto; border-radius: 20px;" />
                                    }
                                    else
                                    {
                                        <p>No logo available</p>
                                    }
                                </div>
                            }
                        }
                    </div>
                </div>

                <!-- Text Section -->
                <div class="col-lg-6 col-md-12">
                    <div class="about-caption">
                        @foreach (var content in Model)
                        {
                            if (content.Title == "AboutOurGym")
                            {
                                <div class="section-tittle section-tittle3 mb-35">
                                    <span>@content.Title</span>
                                    <h2>@content.Content</h2>
                                </div>
                            }
                        }

                        @if (HttpContextAccessor.HttpContext.Session.GetString("LoggedInMemberId") == null)
                        {
                            <a class="btn" asp-action="Register" asp-controller="LoginAndRegister">Become a Member</a>
                        }
                        else
                        {
                            <p>Welcome, member!</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="about-area section-padding30">
        <div class="container">
            <div class="row align-items-center">
                <!-- Text Section (Left) -->
                <div class="col-lg-6 col-md-12">
                    @foreach (var content in Model)
                    {
                        if (content.Title == "Our core values")
                        {
                            <div class="section-tittle section-tittle3 mb-35">
                                <span>@content.Title</span>
                                <h2>@content.Content</h2>
                            </div>
                        }
                    }
                </div>

                <!-- Image Section (Right) -->
                <div class="col-lg-6 col-md-12">
                    <div class="about-img">
                        @foreach (var content in Model)
                        {
                            if (content.Title == "Our core values")
                            {
                                <div id="about-us">
                                    @if (!string.IsNullOrEmpty(content.ImageUrl))
                                    {
                                        <img src="@content.ImageUrl" alt="Core Values Image" style="max-width: 100%; height: auto; border-radius: 20px;" />
                                    }
                                    else
                                    {
                                        <p>No image available</p>
                                    }
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

</main>