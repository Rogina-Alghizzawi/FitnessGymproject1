@model IEnumerable<FitnessGymproject.Models.Aboutu>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">About Us List</h4>

                <div class="table-responsive">
                    <table class="table table-sm table-bordered" style="font-size: 0.8rem;">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Content</th>
                                <th>Image</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Title</td>
                                    <td>@item.Content</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                                        {
                                            <img src="@item.ImageUrl" alt="Profile Image" style="width: 30px; height: 30px; object-fit: cover;">
                                        }
                                        else
                                        {
                                            <span>No Image</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.AboutUsId" class="btn btn-sm btn-warning p-1">Edit</a>
                                        <a asp-action="Details" asp-route-id="@item.AboutUsId" class="btn btn-sm btn-info p-1">Details</a>
                                        <a asp-action="Delete" asp-route-id="@item.AboutUsId" class="btn btn-sm btn-danger p-1">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
