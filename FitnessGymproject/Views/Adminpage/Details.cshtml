@model FitnessGymproject.Models.Admin

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Admin Details</h4>
                @if (Model == null)
                {
                    <div class="alert alert-danger">No details available for this admin.</div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Field</th>
                                    <th>Details</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Full Name</td>
                                    <td>@Html.DisplayFor(model => model.FullName )</td>
                                </tr>
                                <tr>
                                    <td>Email</td>
                                    <td>@Html.DisplayFor(model => model.Email )</td>
                                </tr>
                                <tr>
                                    <td>Password</td>
                                    <td>******</td> <!-- Masked for security -->
                                </tr>
                                <tr>
                                    <td>Created At</td>
                                    <td>@Html.DisplayFor(model => model.CreatedAt )</td>
                                </tr>
                                <tr>
                                    <td>Updated At</td>
                                    <td>@Html.DisplayFor(model => model.UpdatedAt)</td>
                                </tr>
                                <tr>
                                    <td>Gender</td>
                                    <td>@Html.DisplayFor(model => model.Gender )</td>
                                </tr>
                                <tr>
                                    <td>Profile Image</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(Model?.Imageprofileurl))
                                        {
                                            <img src="@Model.Imageprofileurl" alt="Profile Image" class="img-thumbnail" width="100" height="100" />
                                        }
                                        else
                                        {
                                            <img src="/images/default-profile.png" alt="Default Profile Image" class="img-thumbnail" width="100" height="100" />
                                        }
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<form method="post" action="@Url.Action("Delete", new { id = Model.AdminId })">
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Delete Account</button>
</form>

