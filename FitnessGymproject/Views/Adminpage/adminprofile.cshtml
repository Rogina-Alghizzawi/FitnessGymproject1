@model FitnessGymproject.Models.Admin

@{
    ViewData["Title"] = "Admin Profile";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-8 mb-4 mb-lg-0">
                <div class="card admin-profile-card" style="border-radius: 1rem; overflow: hidden;">
                    <div class="row g-0">
                        <div class="col-md-4 gradient-custom text-center text-white d-flex flex-column align-items-center justify-content-center">
                            @if (!string.IsNullOrEmpty(Model.Imageprofileurl))
                            {
                                <img src="@Model.Imageprofileurl"
                                     alt="Avatar" class="img-fluid my-4 rounded-circle" style="width: 120px; height: 120px; object-fit: cover;" />
                            }
                            else
                            {
                                <span class="text-white my-4 d-block rounded-circle bg-dark" style="font-size: 80px; width: 120px; height: 120px; display: flex; align-items: center; justify-content: center;">&#128100;</span>
                            }
                            <h5 class="mt-3">@ViewData["AdminName"]</h5>
                            <p class="mb-2">Admin</p>
                            <a asp-action="Edit" asp-route-id="@Model.AdminId" class="text-white btn btn-outline-light btn-sm">
                                 Edit
                            </a>
                        </div>
                        <div class="col-md-8">
                            <div class="card-body p-5">
                                <h6 class="text-primary mb-3">Personal Information</h6>
                                <hr class="mt-0 mb-4">
                                <div class="row">
                                    <div class="col-6 mb-3">
                                        <h6>Email</h6>
                                        <p class="text-muted">@ViewData["AdminEmail"]</p>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <h6>Gender</h6>
                                        <p class="text-muted">@ViewData["AdminGender"]</p>
                                    </div>
                                </div>
                                <h6 class="text-primary mt-4 mb-3">Account Details</h6>
                                <hr class="mt-0 mb-4">
                                <div class="row">
                                    <div class="col-6 mb-3">
                                        <h6>Created At</h6>
                                        <p class="text-muted">@Model.CreatedAt?.ToString("MM/dd/yyyy")</p>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <h6>Last Updated</h6>
                                        <p class="text-muted">@Model.UpdatedAt?.ToString("MM/dd/yyyy")</p>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-start mt-4">
                                    <a asp-action="Details" asp-route-id="@Model.AdminId" class="btn btn-outline-primary me-3">
                                        <i class="mdi mdi-information-outline"></i> Details
                                    </a>
                                
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .admin-profile-card {
        width: 1000px; 
        margin: 0 auto;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        background-color: #fff;
    }

    .gradient-custom {
        background: linear-gradient(to right bottom, #f6d365, #fd7e84);
        min-height: 100%;
    }

    .admin-profile-card img {
        border: 3px solid white;
    }

    .admin-profile-card h5 {
        font-weight: bold;
    }

    .admin-profile-card p {
        font-size: 14px;
        margin: 0;
    }

    .btn-outline-light {
        border-color: white;
        color: white;
    }

        .btn-outline-light:hover {
            background-color: white;
            color: #fd7e84;
        }
</style>
