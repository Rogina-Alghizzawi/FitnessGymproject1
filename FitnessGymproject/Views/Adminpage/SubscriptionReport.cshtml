@model dynamic

<h2>Subscription Report</h2>



<div class="row">
    <div class="col-md-6">
        <h3>Monthly Report</h3>
        <p>Total Monthly Revenue: @ViewData["MonthlyRevenue"]</p>
        <canvas id="monthlyChart"></canvas>
    </div>
    <div class="col-md-6">
        <h3>Annual Report</h3>
        <p>Total Annual Revenue: @ViewData["AnnualRevenue"]</p>
        <canvas id="annualChart"></canvas>
    </div>
</div>

<table id="example" class="table table-striped">
    <thead>
        <tr>
            <th>Plan Name</th>
            <th>Member Name</th>
            <th>Member Status</th>
            <th>Total Payment</th>
            <th>Payment Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var subscription in Model.MonthlySubscriptions)
        {
            <tr>
                <td>@subscription.PlanName</td>
                <td>@subscription.Member.FullName</td>
                <td>@subscription.Status</td>
                <td>@subscription.TotalPayment</td>
                <td>@subscription.PaymentStatus</td>
            </tr>
        }
    </tbody>
</table>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<link href="https://cdn.datatables.net/1.11.1/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/buttons/2.0.0/css/buttons.dataTables.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.11.1/js/jquery.dataTables.min.js" defer></script>
<script src="https://cdn.datatables.net/buttons/2.0.0/js/dataTables.buttons.min.js" defer></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
<script src="https://cdn.datatables.net/buttons/2.0.0/js/buttons.html5.min.js" defer></script>

<script>
    $(document).ready(function () {
        $('#example').DataTable({
            dom: 'Bfrtip', 
            buttons: [
                'copyHtml5', 
                'excelHtml5', 
                'csvHtml5', 
                'pdfHtml5' 
            ]
        });
    });
</script>
