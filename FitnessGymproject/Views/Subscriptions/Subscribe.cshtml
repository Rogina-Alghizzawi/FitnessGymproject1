@model FitnessGymproject.Models.MembershipPlan

@{
    ViewData["Title"] = "Subscribe to Membership Plan";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["Message"] != null)
{
    <div class="alert alert-info">
        @TempData["Message"]
    </div>
}

<div class="membership-plan-details">
    <h2>@Model.PlanName\</h2>
    <p><strong>Price:</strong> $@Model.Price</p>
    <p><strong>Duration:</strong> @Model.DurationDays days</p>

</div>

<form method="post" asp-action="Subscribe" asp-route-id="@Model.MembershipPlanId">
    <div class="form-group">
        <label for="subscriptionButton">Confirm Subscription</label>
        <button type="submit" class="btn btn-primary" id="subscriptionButton">Subscribe</button>
    </div>
</form>

<div class="back-to-plans">
    <a href="@Url.Action("Index", "MembershipPlans")" class="btn btn-secondary">Back to Membership Plans</a>
</div>
