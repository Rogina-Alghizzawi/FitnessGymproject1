@model IEnumerable<FitnessGymproject.Models.Payment>

@{
    ViewData["Title"] = "Payments";
    Layout = "~/Views/Shared/Home_Layout.cshtml";
}

<h1>Payments</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<section style="padding:200px">
    <div class="payment-cards-container">
        @foreach (var item in Model)
        {
            <div class="payment-card">
                <div class="flip">
                    <!-- Front Side of Card -->
                    <div class="front">
                        <div class="payment-info">
                            <h3>Payment ID: @item.PaymentId</h3>
                            <p>Payment Date: @item.PaymentDate</p>
                            <p>Amount: @item.Amount</p>
                            <p>Status: @item.PaymentStatus</p>
                            <p>Method: @item.PaymentMethod</p>
                        </div>
                    </div>

                    <!-- Back Side of Card -->
                    <div class="back">
                        <div class="strip"></div>
                        <div class="card-holder">
                            <p><strong>Member:</strong> @item.Member.MemberId</p>
                            <p><strong>Subscription:</strong> @item.Subscription.SubscriptionId</p>
                            <hr />
                            <div class="additional-info">
                                <p><strong>Expiration Date:</strong> @item.ExpirationDate</p>
                                <p><strong>Security Code:</strong> @item.SecurityCode</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
<style>
    /* Payment Card Container */
    .payment-cards-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: center;
    }

    /* Payment Card */
    .payment-card {
        width: 400px; /* Increased card width */
        height: 250px; /* Increased card height */
        position: relative;
        perspective: 1000px;
    }

        .payment-card .flip {
            width: 100%;
            height: 100%;
            transform-style: preserve-3d;
            transition: transform 0.6s;
        }

        .payment-card:hover .flip {
            transform: rotateY(180deg);
        }

        .payment-card .front,
        .payment-card .back {
            position: absolute;
            width: 100%;
            height: 100%;
            backface-visibility: hidden;
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .payment-card .front {
            background-color: darkred;
            padding: 30px; /* Adjusted padding for larger card */
            color: #fff;
        }

        .payment-card .back {
            background: darkred;
            color: white; /* Set text color to white */
            padding: 30px; /* Adjusted padding for larger card */
            transform: rotateY(180deg);
        }

    .payment-info {
        font-family: Arial, sans-serif;
        color: white; /* Set text color to white */
    }

        .payment-info h3 {
            font-size: 1.8em; /* Increased font size */
            margin-bottom: 15px; /* Increased margin */
            color: white; /* Ensure heading text is white */
        }

        .payment-info p {
            margin: 8px 0; /* Increased margin */
            font-size: 1.2em; /* Adjusted font size */
            color: white; /* Ensure paragraph text is white */
        }

    .additional-info p {
        margin: 8px 0; /* Increased margin */
        font-size: 1.2em; /* Adjusted font size */
        color: white; /* Ensure additional info text is white */
    }

    /* Add this rule to change the color of the Member and Subscription information */
    .card-holder p {
        color: white; /* Set text color for Member and Subscription info */
    }
</style>


