@model IEnumerable<FitnessGymproject.Models.Payment>

@{
    ViewData["Title"] = "Payments";
    Layout = "~/Views/Shared/Home_Layout.cshtml";
}

<h1>Payments</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<section style="padding:200px">
    <div class="payment-cards-container">
        @foreach (var item in Model)
        {
            <div class="payment-card">
                <div class="flip">
                    <div class="front">
                        <div class="payment-info">
                            <h3>Payment ID: @item.PaymentId</h3>
                            <p>Payment Date: @item.PaymentDate</p>
                            <p>Amount: @item.Amount</p>
                            <p>Status: @item.PaymentStatus</p>
                            <p>Method: @item.PaymentMethod</p>
                        </div>
                    </div>

                    <div class="back">
                        <div class="strip"></div>
                        <div class="card-holder">
                         
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
<style>
    /* Payment Card Container */
    .payment-cards-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: center;
    }

    .payment-card {
        width: 400px;
        height: 250px; 
        position: relative;
        perspective: 1000px;
    }

        .payment-card .flip {
            width: 100%;
            height: 100%;
            transform-style: preserve-3d;
            transition: transform 0.6s;
        }

        .payment-card:hover .flip {
            transform: rotateY(180deg);
        }

        .payment-card .front,
        .payment-card .back {
            position: absolute;
            width: 100%;
            height: 100%;
            backface-visibility: hidden;
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .payment-card .front {
            background-color: darkred;
            padding: 30px; 
            color: #fff;
        }

        .payment-card .back {
            background: darkred;
            color: white; 
            padding: 30px; 
            transform: rotateY(180deg);
        }

    .payment-info {
        font-family: Arial, sans-serif;
        color: white; /* Set text color to white */
    }

        .payment-info h3 {
            font-size: 1.8em; 
            margin-bottom: 15px; 
            color: white; 
        }

        .payment-info p {
            margin: 8px 0;
            font-size: 1.2em; 
            color: white; 
        }

    .additional-info p {
        margin: 8px 0; 
        font-size: 1.2em; 
        color: white; 
    }

    
    .card-holder p {
        color: white; 
    }
</style>


