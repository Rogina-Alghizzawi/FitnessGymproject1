@model FitnessGymproject.Models.Payment

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/Home_Layout.cshtml";

}

<h1 class="text-center">Create</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<h4 class="text-center">Payment</h4>
<hr />

<section style="padding:200px">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" method="post" class="border p-4 rounded shadow-lg">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger">
                        @ViewBag.ErrorMessage
                    </div>
                }
                <div class="form-group">
                    <label asp-for="MemberId" class="control-label"></label>
                    <input type="hidden" asp-for="MemberId" value="@ViewData["MemberId"]" /> <!-- Hidden field to store logged-in member's ID -->
                </div>
                <div class="form-group">
                    <input type="hidden" asp-for="SubscriptionId" value="@ViewData["SubscriptionId"]" />
                </div>

                <div class="form-group">
                    <label asp-for="Amount" class="control-label"></label>
                    <input asp-for="Amount" class="form-control" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PaymentMethod" class="control-label"></label>
                    <input asp-for="PaymentMethod" class="form-control" />
                    <span asp-validation-for="PaymentMethod" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="CardNumber">Card Number</label>
                    <input type="text" class="form-control" id="CardNumber" name="CardNumber" maxlength="19" value="@Model.CardNumber" />
                </div>

                <div class="form-group">
                    <label for="ExpirationDate">Expiration Date (MM/YY)</label>
                    <input type="text" class="form-control" id="ExpirationDate" name="ExpirationDate" maxlength="5" value="@Model.ExpirationDate" />
                </div>

                <div class="form-group">
                    <label for="SecurityCode">Security Code (CVV)</label>
                    <input type="text" class="form-control" id="SecurityCode" name="SecurityCode" maxlength="4" value="@Model.SecurityCode" />
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Create" class="btn btn-dark" style="background-color: #8B0000; border-color: #8B0000;" />
                </div>

            </form>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
