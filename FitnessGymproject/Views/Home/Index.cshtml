</div>
<!-- slider Area End-->
<!--? About Area Start -->
<section class="about-area section-padding30">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 col-md-12">
                @foreach (var content in Model)
                {
                    if (content.Title == "About us")
                    {
                        <div id="about-us">

                            @if (!string.IsNullOrEmpty(content.LogoUrl))
                            {
                                <img src="@content.LogoUrl" alt="Logo" style="max-width: 100%; height: auto; border-radius:20px;" />
                            }
                            else
                            {
                                <p>No logo available</p>
                            }
                        </div>
                    }
                }

</div>
            <div class="col-lg-6 col-md-12">
                <div class="about-caption">
                    <!-- Section Tittle -->
                    <div class="section-tittle section-tittle3 mb-35">
                        <span>ABOUT oUR GYM</span>
                        <h2>Safe Body building proper Solutions That Saves our Valuable Time!</h2>
                    </div>
                    <p class="pera-top">Brook presents your services with flexible, convenient and cdpose layouts. You can select your favorite layouts & elements for cular ts with unlimited ustomization possibilities. Pixel-perfect replication of the designers is intended.</p>
                    <p class="mb-65 pera-bottom">Brook presents your services with flexible, convefnient and chient anipurpose layouts. You can select your favorite layouts.</p>
                    @if (HttpContextAccessor.HttpContext.Session.GetString("LoggedInMemberId") == null)
                    {
                        <a class="nav-link btn header-btn" asp-action="Register" asp-controller="LoginAndRegister">became a member</a>
                    }
                    else
                    {
                        <p>Welcome, member!</p>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<!-- About-2 Area End -->
<!-- Want To work End -->
<section class="services-area pt-100 pb-150 section-bg" data-background="assets/img/gallery/section_bg01.png">
    <div class="container">
        <div class="row d-flex justify-content-center">
            @foreach (var content in Model)
            {
                if (content.Title == "QUALITY EQUIPMENT")
                {
                    <div class="col-lg-4 col-md-4 col-sm-6 text-center">
                        <div class="single-cat text-center mb-50">
                            <div class="cat-icon">
                                <img src="@content.LogoUrl" alt="Quality Equipment" style="width: 100px; height: 100px;" />
                            </div>
                            <div class="cat-cap">
                                <h5>@content.Title</h5>

                                <p>@content.Description</p>
                            </div>
                            <div class="img-cap">
                                <a class="nav-link" asp-action="Index" asp-controller="Aboutus">Discover More About Us<i class="ti-arrow-right"></i> </a>
                            </div>
                        </div>
                    </div>
                }
            }

            @foreach (var content in Model)
            {
                if (content.Title == "Health caring")
                {
                    <div class="col-lg-4 col-md-4 col-sm-6 text-center">
                        <div class="single-cat text-center mb-50">
                            <div class="cat-icon">
                                <img src="@content.LogoUrl" alt="Health caring" style="width: 100px; height: 100px;" />
                            </div>
                            <div class="cat-cap">
                                <h5>@content.Title</h5>
                                <p>@content.Description</p>
                            </div>
                            <div class="img-cap">
                                <a class="nav-link" asp-action="Index" asp-controller="Aboutus">Discover More About Us<i class="ti-arrow-right"></i> </a>
                            </div>
                        </div>
                    </div>
                }
            }

        </div>
    </div>
</section>
<!-- Services Area End -->
<!--? About-2 Area Start -->
<section class="about-area2 testimonial-area section-padding30 fix">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-5 col-md-11 col-sm-11">
                <!-- about-img -->
                <div class="about-img2">
                    @foreach (var content in Model)
                    {
                        if (content.Title == "Testimonials")
                        {

                            <img src="@content.LogoUrl" alt="Testimonials" />
                                    
                            
                        }
                    }                    <!-- Shape -->
                    <div class="shape-qutaion d-none d-sm-block">
                        <img src="~/HomeDesign/assets/img//gallery/qutaion.png" alt="">
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-9 col-sm-9">
                <div class="about-caption">
                    <!-- Section Tittle -->
                    <div class="section-tittle mb-55">
                        
                        @foreach (var content in Model)
                        {
                            if (content.Title == "Testimonials")
                            {
                                <span>@content.Title</span>
                                <h2>@content.Description</h2>     
                            }
