@model FitnessGymproject.Models.Member

@{
    Layout = "~/Views/Shared/Home_Layout.cshtml";
}

<section class="vh-100" style="padding:200px;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-8 mb-4 mb-lg-0">
                <div class="card admin-profile-card" style="border-radius: 1rem; overflow: hidden;">
                    <div class="row g-0">
                        <div class="col-md-4 gradient-custom text-center text-white d-flex flex-column align-items-center justify-content-center">
                            <img src="@Model.Imageprofileurl" alt="Profile Image" class="rounded-circle" width="50" height="50" />

                            <h5 class="mt-3">@ViewData["FullName"]</h5>
                            <p class="mb-2">@ViewData["Gender"]</p>
                            <a asp-action="UpadtaMemberProfile" asp-route-id="@Model.MemberId" class="text-white btn btn-outline-light btn-sm">
                                <i class="far fa-edit"></i> Edit
                            </a>
                        </div>

                        <div class="col-md-8">
                            <div class="card-body p-5">
                                <h6 class="text-primary mb-3">Personal Information</h6>
                                <hr class="mt-0 mb-4">
                                <div class="row">
                                    <div class="col-6 mb-3">
                                        <h6>Address</h6>
                                        <p class="text-muted">@ViewData["Address"]</p>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <h6>Phone Number</h6>
                                        <p class="text-muted">@ViewData["PhoneNumber"]</p>
                                    </div>
                                </div>

                                <div class="mt-4">
                                    <a asp-action="Index" asp-controller="Payments" asp-route-id="@Model.MemberId"  style="color:white" class="btn btn-outline-primary">View Payments</a>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<style>
    .admin-profile-card {
        width: 100%;
        margin: 0 auto;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        background-color: #fff;
        border-radius: 1rem;
    }

    .gradient-custom {
        background: linear-gradient(to right bottom, #ff0000, #8b0000);
        min-height: 100%;
    }

    .admin-profile-card img {
        border: 3px solid white;
    }

    .admin-profile-card h5 {
        font-weight: bold;
        color: #8b0000; 
    }

    .admin-profile-card p {
        font-size: 14px;
        margin: 0;
        color: #000; 
    }

    .btn-outline-light {
        border-color: #8b0000; 
        color: #8b0000; 
    }

        .btn-outline-light:hover {
            background-color: #8b0000; 
            color: white;
        }

    .btn-outline-primary {
        border-color: #ff0000; 
        color: #ff0000; 
    }

        .btn-outline-primary:hover {
            background-color: #ff0000; 
            color: white;
        }

    .container {
        max-width: 100%; 
        margin: 0 auto;
        padding: 40px; 
    }

    .card-body {
        padding: 3rem; 
    }

    .row {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
    }

    .col-6 {
        width: 48%;
        margin-bottom: 20px; 
    }

    .social-link {
        display: flex;
        justify-content: center;
        margin-top: 20px;
    }

        .social-link a {
            color: #8b0000;
            margin: 0 10px;
            font-size: 1.5rem;
        }

            .social-link a:hover {
                color: #ff0000; 
            }
</style>

