@model IEnumerable<FitnessGymproject.Models.Workoutplan>

@{
    ViewData["Title"] = "Workout Plans";
    Layout = "~/Views/Shared/Home_Layout.cshtml";
}

<section style="padding: 200px;">
    <div class="container mt-5">
        <h2 class="text-center text-white mb-4">@ViewData["Title"]</h2>

        @if (ViewBag.AlertMessage != null)
        {
            <div class="alert alert-warning text-center">
                @ViewBag.AlertMessage
            </div>
        }

        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-dark table-striped table-hover" style="width: 100%; font-size: 1.2em;">
                    <thead>
                        <tr>
                            <th>Plan Name</th>
                            <th>Exercises</th>
                            <th>Schedule</th>
                            <th>Goals</th>
                         
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var workoutPlan in Model)
                        {
                            <tr>
                                <td>@workoutPlan.PlanName</td>
                                <td>@workoutPlan.Exercises</td>
                                <td>@workoutPlan.Schedule</td>
                                <td>@workoutPlan.Goals</td>
                               
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-center text-white">No workout plans assigned.</p>
        }
    </div>
</section>

<style>
    body {
        background-color: #121212; /* Dark background */
        color: #ffffff; /* White text for contrast */
    }

    .table-dark th, .table-dark td {
        vertical-align: middle; /* Center text vertically */
    }

    .table-dark thead th {
        background-color: #1E1E1E; /* Slightly lighter for header */
        color: #ffffff;
    }

    .table {
        width: 100%; /* Make the table take full width */
    }

        .table td, .table th {
            padding: 15px; /* Increase padding for larger cells */
        }

    .alert {
        background-color: #FFCC00; /* Accent color */
        color: #333366; /* Contrast for text */
    }
</style>
