 @model IEnumerable<FitnessGymproject.Models.Workoutplan>

<h2>Workout Plans</h2>

@if (Model != null && Model.Any())
{
    foreach (var workoutPlan in Model)
    {
        <div>
            <h3>@workoutPlan.PlanName</h3>
            <p><strong>Exercises:</strong> @workoutPlan.Exercises</p>
            <p><strong>Schedule:</strong> @workoutPlan.Schedule</p>
            <p><strong>Goals:</strong> @workoutPlan.Goals</p>
            <p><strong>Price:</strong> @workoutPlan.Price</p>
            <p><strong>Created At:</strong> @workoutPlan.CreatedAt</p>
            <p><strong>Updated At:</strong> @workoutPlan.UpdatedAt</p>
            <hr />
        </div>
    }
}
else
{
    <p>No workout plans assigned.</p>
}
