@model FitnessGymproject.Models.Trainer

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/TrainerLayout.cshtml";
}

<style>
    .centered-form {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .card {
        width: 70%;
    }
</style>

<div class="centered-form">
    <div class="card">
        <div class="card-header">
            <h5 class="card-header-text">Update Profile</h5>
        </div>
        <div class="card-body">
            <form asp-action="Edit" asp-route-id="@Model.TrainerId" method="post" enctype="multipart/form-data" class="forms-sample">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="TrainerId" />

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="FullName" class="col-form-label">Full Name</label>
                        <input asp-for="FullName" class="form-control" id="FullName" placeholder="Full Name" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-6">
                        <label for="Email" class="col-form-label">Email Address</label>
                        <input asp-for="Email" class="form-control" id="Email" placeholder="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="Password" class="col-form-label">Password</label>
                        <input asp-for="Password" class="form-control" id="Password" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-6">
                        <label for="PhoneNumber" class="col-form-label">Phone Number</label>
                        <input asp-for="PhoneNumber" class="form-control" id="PhoneNumber" placeholder="Phone Number" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="Specialization" class="col-form-label">Specialization</label>
                        <input asp-for="Specialization" class="form-control" id="Specialization" placeholder="Specialization" />
                        <span asp-validation-for="Specialization" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-6">
                        <label for="Bio" class="col-form-label">Bio</label>
                        <input asp-for="Bio" class="form-control" id="Bio" placeholder="Bio" />
                        <span asp-validation-for="Bio" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="CreatedAt" class="col-form-label">Created At</label>
                        <input asp-for="CreatedAt" class="form-control" id="CreatedAt" placeholder="Created At" />
                        <span asp-validation-for="CreatedAt" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-6">
                        <label for="UpdatedAt" class="col-form-label">Updated At</label>
                        <input asp-for="UpdatedAt" class="form-control" id="UpdatedAt" placeholder="Updated At" />
                        <span asp-validation-for="UpdatedAt" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="ImageFile" class="col-form-label">Image</label>
                        <input asp-for="ImageFile" type="file" class="form-control" />
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-6">
                        <label for="Gender" class="col-form-label">Gender</label>
                        <input asp-for="Gender" class="form-control" id="Gender" placeholder="Gender" />
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-12 text-center">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        <a asp-action="TrainerProfile" class="btn btn-primary">Back to List</a>

                    </div>
                 
                </div>
            </form>
        </div>
    </div>
</div>

<div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
