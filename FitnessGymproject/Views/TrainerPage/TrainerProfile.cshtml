@model FitnessGymproject.Models.Trainer

@{
    ViewData["Title"] = "Trainer Profile";
    Layout = "~/Views/Shared/TrainerLayout.cshtml";
}

<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-lg-8 mb-4 mb-lg-0">
                <div class="card trainer-profile-card" style="border-radius: 1rem; overflow: hidden;">
                    <div class="row g-0">
                        <div class="col-md-4 gradient-custom text-center text-white d-flex flex-column align-items-center justify-content-center">
                            @if (!string.IsNullOrEmpty(Model.Imageprofileurl))
                            {
                                <img src="@Model.Imageprofileurl"
                                     alt="Avatar" class="img-fluid my-4 rounded-circle" style="width: 120px; height: 120px; object-fit: cover;" />
                            }
                            else
                            {
                                <span class="text-white my-4 d-block rounded-circle bg-dark" style="font-size: 80px; width: 120px; height: 120px; display: flex; align-items: center; justify-content: center;">&#128100;</span>
                            }
                            <h5 class="mt-3">@ViewData["TrainerName"]</h5>
                            <p class="mb-2">@ViewData["TrainerSpecialization"]</p>
                            <a asp-controller="TrainerPage" asp-action="Edit" class="text-white btn btn-outline-light btn-sm">
                                Edit Trainer
                            </a>
                        </div>
                        <div class="col-md-8">
                            <div class="card-body p-5">
                                <h6 class="text-primary mb-3">Personal Information</h6>
                                <hr class="mt-0 mb-4">
                                <div class="row">
                                    <div class="col-6 mb-3">
                                        <h6>Email</h6>
                                        <p class="text-muted">@ViewData["TrainerEmail"]</p>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <h6>Phone</h6>
                                        <p class="text-muted">@ViewData["TrainerPhoneNumber"]</p>
                                    </div>
                                </div>
                                <h6 class="text-primary mt-4 mb-3">Biography</h6>
                                <hr class="mt-0 mb-4">
                                <div class="row">
                                    <div class="col-12 mb-3">
                                        <h6>Bio</h6>
                                        <p class="text-muted">@ViewData["TrainerBio"]</p>
                                    </div>
                                </div>
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .trainer-profile-card {
        width: 1000px;
        margin: 0 auto;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        background-color: #fff;
    }

    .gradient-custom {
        background: linear-gradient(to right bottom, #A2A2FF, #D1B3FF);
        min-height: 100%;
    }

    .trainer-profile-card img {
        border: 3px solid white;
    }

    .trainer-profile-card h5 {
        font-weight: bold;
    }

    .trainer-profile-card p {
        font-size: 14px;
        margin: 0;
    }

    .btn-outline-light {
        border-color: white;
        color: white;
    }

        .btn-outline-light:hover {
            background-color: white;
            color: #fd7e84;
        }
</style>
