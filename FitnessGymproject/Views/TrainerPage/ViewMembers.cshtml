@model IEnumerable<FitnessGymproject.Models.Member>

@{
    ViewData["Title"] = "Member List";
    Layout = "~/Views/Shared/TrainerLayout.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title">
                <span class="page-title-icon  text-white me-2">
                    <i class="mdi mdi-home"></i>
                </span> Member List
            </h3>
            <nav aria-label="breadcrumb">
                <ul class="breadcrumb">
                    <li class="breadcrumb-item active" aria-current="page">
                        <span></span>Overview <i class="mdi mdi-alert-circle-outline icon-sm text-primary align-middle"></i>
                    </li>
                </ul>
            </nav>
        </div>

        <div class="row">
            <!-- Member List -->
            <div class="col-md-12 stretch-card grid-margin">
                <div class="card card-img-holder text-white">
                    <div class="card-body">
                        <h5 class="card-title text-center">Member List</h5>
                        <div class="table-responsive">
                            <table class="table table-striped table-sm">
                                <thead>
                                    <tr>
                                        <th>Full Name</th>
                                        <th>Phone Number</th>
                                        <th>Gender</th>
                                        <th>Profile Image</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr class="@(item.Gender == "Female" ? "table-success" : item.Gender == "Male" ? "table-info" : "")">
                                            <td>@item.FullName</td>
                                            <td>@item.PhoneNumber</td>
                                            <td>@item.Gender</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.Imageprofileurl))
                                                {
                                                    <img src="@Url.Content("~/Images/" + item.Imageprofileurl)" alt="Profile Image" class="img-fluid rounded-circle" style="width: 50px; height: 50px;" />
                                                }
                                                else
                                                {
                                                    <span class="no-image">No Image</span>
                                                }
                                            </td>
                                            <td>
                                                <!-- Actions will go here -->
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
        font-family: Arial, sans-serif;
    }

    .main-panel {
        background-color: #fff;
        padding: 20px;
    }

    .page-header {
        margin-bottom: 20px;
    }

    .table-responsive {
        margin-top: 20px;
    }

    .table th, .table td {
        text-align: center;
        padding: 10px;
    }

    .table th {
        background-color: #f1f1f1;
        color: #333;
    }

    .table td {
        border-top: 1px solid #ddd;
    }

    .table img {
        width: 50px;
        height: 50px;
        border-radius: 50%;
    }

    .no-image {
        color: #999;
        font-style: italic;
    }

 

    .text-white {
        color: #fff;
    }

    .card-body {
        text-align: center;
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: bold;
    }
</style>
