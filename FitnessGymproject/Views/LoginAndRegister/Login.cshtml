@{
    Layout = "~/Views/Shared/Home_Layout.cshtml";
}

    <style>
    .container{
        margin-top: 150px;
    }


        .form-control {
            height: 40px; 
            font-size: 14px; 
            border-radius: 8px;
            border: 1px solid black; 
            padding: 8px; 
        }

        .form-submit {
            background-color: #FF0000; 
            color: white;
            border: none;
            border-radius: 8px;
            padding: 12px; 
            width: 100%;
            cursor: pointer;
            font-size: 16px;
        }

            .form-submit:hover {
                background-color: #8B0000; 
            }

        .form-group {
            margin-bottom: 15px; 
        }

        .section-tittle {
            margin-bottom: 20px; 
        }

        .social-login {
            text-align: center;
            margin-top: 20px; 
        }

        .socials {
            list-style: none;
            padding: 0;
            display: flex;
            justify-content: center;
        }

            .socials li {
                margin: 0 8px; 
            }

        .social-label {
            font-size: 14px; 
            margin-bottom: 8px; 
        }

        .create-account-link {
            text-align: center;
            margin-top: 15px; 
        }

            .create-account-link a {
                color: #FF0000; 
                font-size: 14px; 
            }

                .create-account-link a:hover {
                    text-decoration: underline;
                    color: #8B0000; 
                }

        .form-image img {
            width: 80%; 
            height: auto;
        }

        .form-wrapper {
            padding: 20px; 
            background-color: #f8f9fa;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); 
            max-width: 400px;
            margin: 0 auto; 
        }

        .form-tittle h2 {
            font-size: 20px; 
            font-weight: bold;
            color: #8B0000; 
        }

        .form-tittle span {
            font-size: 16px; 
            font-weight: 500;
            color: #000000;
        }

        .contact-form-main {
            margin-top: 50px;
            margin-bottom: 50px; 
        }

        .signup-image-link {
            color: #FF0000; 
            font-size: 14px; 
        }

            .signup-image-link:hover {
                text-decoration: underline;
                color: #8B0000; 
    </style>


<body>
    <div class="contact-form-main mt-100 mb-100">
        <div class="container">
            <div class="row justify-content-between">
                <div class="col-xl-5 col-lg-5 d-flex justify-content-center align-items-center mb-30">
                    <div class="form-image">
                        <img src="~/HomeDesign/assets/img/gallery/contact_form.png" alt="Sign Up Image" class="img-fluid" />
                    </div>
                </div>

                <div class="col-xl-7 col-lg-7">
                    <div class="form-wrapper">
                        <div class="form-tittle">
                            <div class="row">
                                <div class="col-lg-11 col-md-10 col-sm-10">
                                    <div class="section-tittle">
                                        <span>Sign In Form</span>
                                        <h2>Login to Your Account</h2>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <form asp-action="Login" asp-controller="LoginAndRegister" method="POST" class="register-form" id="login-form">
                            <div class="form-group">
                                <label for="email"><i class="zmdi zmdi-email"></i></label>
                                <input type="email" name="email" id="email" placeholder="Your Email" class="form-control" required />
                            </div>
                            <div class="form-group">
                                <label for="password"><i class="zmdi zmdi-lock"></i></label>
                                <input type="password" name="password" id="password" placeholder="Password" class="form-control" required />
                            </div>

                            @if (ViewBag.Error != null)
                            {
                                <div class="alert alert-danger" style="color: red;">
                                    @ViewBag.Error
                                </div>
                            }

                            <div class="form-group form-button">
                                <input type="submit" name="signin" id="signin" class="form-submit" value="Log in" />
                            </div>
                        </form>

                       

                        <div class="create-account-link">
                            <a asp-action="Register" asp-controller="LoginAndRegister" class="signup-image-link">Create an account</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- JS -->
    <script src="~/LoginAndRegisterDesign/vendor/jquery/jquery.min.js"></script>
    <script src="~/LoginAndRegisterDesign/js/main.js"></script>
</body>
