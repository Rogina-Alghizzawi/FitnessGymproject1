@model IEnumerable<FitnessGymproject.Models.Trainer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Trainer List</h4>

                <div class="table-responsive">
                    <table class="table table-sm table-bordered" style="font-size: 0.7rem; width:100px; margin: auto;">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.First().FullName)</th>
                                <th>@Html.DisplayNameFor(model => model.First().Email)</th>
                                <th>@Html.DisplayNameFor(model => model.First().PhoneNumber)</th>
                                <th>@Html.DisplayNameFor(model => model.First().Specialization)</th>
                                <th>@Html.DisplayNameFor(model => model.First().Bio)</th>
                                <th>Profile Image</th>
                                <th>@Html.DisplayNameFor(model => model.First().Gender)</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                    <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Specialization)</td>
                                    <td style="max-width: 150px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                                        @Html.DisplayFor(modelItem => item.Bio)
                                    </td>
                                   
                                    <td>
                                        <img src="@item.Imageprofileurl" alt="Profile Image" style="width: 30px; height: 30px; object-fit: cover;">
                                    </td>
                                    <td>@Html.DisplayFor(modelItem => item.Gender)</td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.TrainerId" class="btn btn-sm btn-warning p-1">Edit</a>
                                        <a asp-action="Details" asp-route-id="@item.TrainerId" class="btn btn-sm btn-info p-1">Details</a>
                                        <a asp-action="Delete" asp-route-id="@item.TrainerId" class="btn btn-sm btn-danger p-1">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>