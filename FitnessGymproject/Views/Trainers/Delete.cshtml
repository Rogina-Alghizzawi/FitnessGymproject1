@model FitnessGymproject.Models.Trainer

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container mt-4">
    <h1 class="mb-4">Delete Trainer</h1>

    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h4>Are you sure you want to delete this trainer?</h4>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-sm-2">
                    <strong>@Html.DisplayNameFor(model => model.FullName)</strong>
                </div>
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.FullName)
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-2">
                    <strong>@Html.DisplayNameFor(model => model.Email)</strong>
                </div>
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.Email)
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-2">
                    <strong>@Html.DisplayNameFor(model => model.Password)</strong>
                </div>
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.Password)
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-2">
                    <strong>@Html.DisplayNameFor(model => model.PhoneNumber)</strong>
                </div>
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.PhoneNumber)
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-2">
                    <strong>@Html.DisplayNameFor(model => model.Specialization)</strong>
                </div>
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.Specialization)
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-2">
                    <strong>@Html.DisplayNameFor(model => model.Bio)</strong>
                </div>
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.Bio)
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-2">
                    <strong>@Html.DisplayNameFor(model => model.CreatedAt)</strong>
                </div>
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.CreatedAt)
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-2">
                    <strong>@Html.DisplayNameFor(model => model.UpdatedAt)</strong>
                </div>
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.UpdatedAt)
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-2">
                    <strong>@Html.DisplayNameFor(model => model.Imageprofileurl)</strong>
                </div>
                <div class="col-sm-10">
                    @if (!string.IsNullOrEmpty(Model?.Imageprofileurl))
                    {
                        <img src="@Model.Imageprofileurl" alt="Profile Image" class="img-thumbnail" width="100" height="100" />
                    }
                    else
                    {
                        <span>No Image Available</span>
                    }
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-sm-2">
                    <strong>@Html.DisplayNameFor(model => model.Gender)</strong>
                </div>
                <div class="col-sm-10">
                    @Html.DisplayFor(model => model.Gender)
                </div>
            </div>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="TrainerId" />
                <div class="form-group">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-action="Index" class="btn btn-light ml-2">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
