@{
    ViewData["Title"] = "Your Subscribed Plans";
}

<h2>@ViewData["Title"]</h2>

@if (ViewBag.AlertMessage != null)
{
    <div class="alert alert-warning">
        @ViewBag.AlertMessage
    </div>
}

@if (ViewBag.Subscriptions != null && ViewBag.Subscriptions.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Plan Name</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Amount</th>
                <th>Payment Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.Subscriptions)
            {
                <tr>
                    <td>@item.PlanName</td>
                    <td>@item.StartDate?.ToString("d")</td>
                    <td>@item.EndDate?.ToString("d")</td>
                    <td>@item.TotalAmount?.ToString("C")</td>
                    <td>
                        @if (item.CustomPaymentStatus == "Paid")
                        {
                            <span class="badge bg-success">@item.CustomPaymentStatus</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">@item.CustomPaymentStatus</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No subscriptions found.</p>
}
