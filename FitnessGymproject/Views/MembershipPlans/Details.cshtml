@model FitnessGymproject.Models.MembershipPlan

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Membership Plan Details</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Field</th>
                                <th>Details</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Plan Name</td>
                                <td>@Html.DisplayFor(model => model.PlanName)</td>
                            </tr>
                            <tr>
                                <td>Plan Description</td>
                                <td>@Html.DisplayFor(model => model.PlanDescription)</td>
                            </tr>
                            <tr>
                                <td>Included Services</td>
                                <td>@Html.DisplayFor(model => model.IncludedServices)</td>
                            </tr>
                            <tr>
                                <td>Price</td>
                                <td>@Html.DisplayFor(model => model.Price)</td>
                            </tr>
                            <tr>
                                <td>Duration (Days)</td>
                                <td>@Html.DisplayFor(model => model.DurationDays)</td>
                            </tr>
                            <tr>
                                <td>Created At</td>
                                <td>@Html.DisplayFor(model => model.CreatedAt)</td>
                            </tr>
                            <tr>
                                <td>Updated At</td>
                                <td>@Html.DisplayFor(model => model.UpdatedAt)</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.MembershipPlanId" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
