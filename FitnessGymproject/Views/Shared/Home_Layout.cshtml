@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor



<!doctype html>
<html class="no-js" lang="zxx">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
