<</style>
</head>
<body>
    <!-- ? Preloader Start -->
    <div id="preloader-active">
        <div class="preloader d-flex align-items-center justify-content-center">
            <div class="preloader-inner position-relative">
                <div class="preloader-circle"></div>
                <div class="preloader-img pere-text">
                    <img src="~/HomeDesign/assets/img/logo/loder.png" alt="">
                </div>
            </div>
        </div>
    </div>
    <header>
        <!--? Header Start -->
        <div class="header-area header-transparent">
            <div class="main-header header-sticky">
                <div class="container-fluid">
                    <div class="row align-items-center">
                        <!-- Logo -->
                        <div class="col-xl-2 col-lg-2 col-md-1">
                            <div class="logo">
                                <a href="index.html"><img src="~/HomeDesign/assets/img/logo/logo.png" alt=""></a>
                            </div>
                        </div>
                        <div class="col-xl-10 col-lg-10 col-md-10">


                            <div class="main-menu f-right d-none d-lg-block">
                                <nav>
                                    <ul id="navigation">
                                        @if (HttpContextAccessor.HttpContext.Session.GetString("LoggedInMemberId") != null)
                                        {
                                            <!-- Member is logged in -->
                                            <li><a asp-action="Index" asp-controller="Home">Home</a></li>
                                            <li class="nav-item">
                                                <a class="nav-link" asp-action="Profile" asp-controller="Members">My Profile</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" asp-action="ViewSubscribedPlans" asp-controller="Members">Subsecribed Workoutpaln</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" asp-action="ViewAvailablePlans" asp-controller="Members">WorkoutPlan</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" asp-action="ViewSubscribedMembershipPlans" asp-controller="MembershipPlans">Subscribed MembershipPlans</a>
                                            </li>
                                           
                                            <li class="nav-item">
                                                <a class="nav-link" asp-action="Index" asp-controller="Invoices">Invoices</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" asp-action="Logout" asp-controller="LoginAndRegisterController">Logout</a>
                                            </li>

                                            <li class="nav-item">
                                                <a class="nav-link" asp-action="Create" asp-controller="Testimonials">Add Testimonial</a>
                                            </li>
                                        }
                                        else
                                        {
                                            <!-- Member is not logged in -->
                                            <li><a asp-action="Index" asp-controller="Home">Home</a></li>
                                            <li class="nav-item">
                                                <a class="nav-link" asp-action="Login" asp-controller="LoginAndRegister">Login</a>
                                            </li>
                                            <div class="header-right-btn f-right d-none d-lg-block ml-30">


                                            <li class="nav-item">
                                                <a class="nav-link btn header-btn" asp-action="Register" asp-controller="LoginAndRegister">became a member</a>
                                            </li>

                                </div>
                                        }
                                    </ul>
                                </nav>
                            </div>

                          
                        </div>
                        <!-- Mobile Menu -->
                        <div class="col-12">
                            <div class="mobile_menu d-block d-lg-none"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    @RenderBody()


    <div class="footer-area section-bg" data-background="/HomeDesign/assets/img/gallery/section_bg03.png">
        <div class="container">
            <div class="footer-top footer-padding">
                <!-- Footer Menu -->
                <div class="row d-flex justify-content-between">
                    <div class="col-xl-2 col-lg-2 col-md-4 col-sm-6">
                        <div class="single-footer-caption mb-50">
                            <div class="footer-tittle">
                                <h4>COMPANY</h4>
                                <ul>
                                    <li><a href="/Home/AboutUs">About Us</a></li>
                                    <li><a href="/Home/Company">Company</a></li>
                                    <li><a href="/Home/PressAndBlog">Press & Blog</a></li>
                                    <li><a href="/Home/PrivacyPolicy">Privacy Policy</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-lg-3 col-md-4 col-sm-6">
                        <div class="single-footer-caption mb-50">
                            <div class="footer-tittle">
                                <h4>Open hour</h4>
                                <ul>
      
                                    <li class="nav-item">
                                        <a class="nav-link" asp-action="ViewAvailablePlans" asp-controller="Members">Workout Plan</a>

                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-action="ViewAvailableMembershipPlans" asp-controller="MembershipPlans">AvailableMembershipPlans</a>
                                    </li>

           
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-lg-4 col-md-5 col-sm-6">
                        <div class="single-footer-caption mb-50">
                            <!-- logo -->
                            <div class="footer-logo">
                                <a href="index.html"><img src="~/HomeDesign/assets/img/logo/logo2_footer.png" alt=""></a>
                            </div>
                            <div class="footer-tittle">
                                <div class="footer-pera">
                                    <p class="info1">The trade war currently ensuing between the US and several nations around the globe, most fiercely with China.</p>
                                </div>
                            </div>
                            <!-- Footer Social -->
                            <div class="footer-social">
                                <a href="https://www.facebook.com/sai4ull"><i class="fab fa-facebook-f"></i></a>
                                <a href="#"><i class="fab fa-twitter"></i></a>
                                <a href="#"><i class="fas fa-globe"></i></a>
                                <a href="#"><i class="fab fa-instagram"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Add the new links below (you can also customize this section) -->
                

    <!-- Scroll Up -->
    <div id="back-top">
        <a title="Go to Top" href="#"> <i class="fas fa-level-up-alt"></i></a>
