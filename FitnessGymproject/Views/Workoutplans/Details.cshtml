@model FitnessGymproject.Models.Workoutplan

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/TrainerLayout.cshtml";
}

<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Workoutplan Details</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Field</th>
                                <th>Details</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Plan Name</td>
                                <td>@Html.DisplayFor(model => model.PlanName)</td>
                            </tr>
                            <tr>
                                <td>Exercises</td>
                                <td>@Html.DisplayFor(model => model.Exercises)</td>
                            </tr>
                            <tr>
                                <td>Schedule</td>
                                <td>@Html.DisplayFor(model => model.Schedule)</td>
                            </tr>
                            <tr>
                                <td>Goals</td>
                                <td>@Html.DisplayFor(model => model.Goals)</td>
                            </tr>
                            <tr>
                                <td>Created At</td>
                                <td>@Html.DisplayFor(model => model.CreatedAt)</td>
                            </tr>
                            <tr>
                                <td>Updated At</td>
                                <td>@Html.DisplayFor(model => model.UpdatedAt)</td>
                            </tr>
                            <tr>
                                <td>Member</td>
                                <td>@Html.DisplayFor(model => model.Member.MemberId)</td>
                            </tr>
                            <tr>
                                <td>Trainer</td>
                                <td>@Html.DisplayFor(model => model.Trainer.TrainerId)</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.WorkoutPlanId" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
