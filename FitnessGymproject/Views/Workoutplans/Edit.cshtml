@model FitnessGymproject.Models.Workoutplan

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/TrainerLayout.cshtml";

}


<form asp-action="Edit" class="forms-sample custom-form" style="margin-top: 20px;">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="WorkoutPlanId" />

    <div class="row">
        <div class="col-md-6 form-group mb-3">
            <label for="PlanName" class="form-label">Plan Name</label>
            <input asp-for="PlanName" class="form-control custom-input" id="PlanName" placeholder="Enter Plan Name" />
            <span asp-validation-for="PlanName" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label for="Trainer" class="form-label">Trainer</label>
            <input type="text" class="form-control custom-input" value="@ViewData["TrainerId"]" readonly />
            <input type="hidden" asp-for="TrainerId" value="@ViewData["TrainerId"]" />
            <span asp-validation-for="TrainerId" class="text-danger"></span>
        </div>


        <div class="col-md-6 form-group mb-3">
            <label for="Exercises" class="form-label">Exercises</label>
            <input asp-for="Exercises" class="form-control custom-input" id="Exercises" placeholder="Enter Exercises" />
            <span asp-validation-for="Exercises" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 form-group mb-3">
            <label for="Schedule" class="form-label">Schedule</label>
            <input asp-for="Schedule" class="form-control custom-input" id="Schedule" placeholder="Enter Schedule" />
            <span asp-validation-for="Schedule" class="text-danger"></span>
        </div>

        <div class="col-md-6 form-group mb-3">
            <label for="Goals" class="form-label">Goals</label>
            <input asp-for="Goals" class="form-control custom-input" id="Goals" placeholder="Enter Goals" />
            <span asp-validation-for="Goals" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 form-group mb-3">
            <label for="CreatedAt" class="form-label">Created At</label>
            <input asp-for="CreatedAt" class="form-control custom-input" id="CreatedAt" placeholder="Enter Created At" />
            <span asp-validation-for="CreatedAt" class="text-danger"></span>
        </div>

        <div class="col-md-6 form-group mb-3">
            <label for="UpdatedAt" class="form-label">Updated At</label>
            <input asp-for="UpdatedAt" class="form-control custom-input" id="UpdatedAt" placeholder="Enter Updated At" />
            <span asp-validation-for="UpdatedAt" class="text-danger"></span>
        </div>
    </div>

    <div class="d-flex justify-content-between mt-4">
        <button type="submit" class="btn btn-primary custom-button">Submit</button>
        <button type="button" class="btn btn-secondary custom-button">Cancel</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>

    </div>
</form>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
